<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgt"
                tools:context=".Probabilities">

    <Button
            android:id="@+id/button12"
            android:background="@drawable/buttonbackground"
            android:layout_centerHorizontal="true"
            android:layout_width="123dp"
            android:text="Home"

            android:fontFamily="@font/exo_2"
            android:layout_below="@+id/textView3" android:layout_height="40dp"

        android:layout_marginTop="7.5dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="310dp"
            android:layout_height="60dp" android:id="@+id/textView"
            android:layout_alignParentTop="true" android:layout_marginTop="18dp"
            android:textColorHighlight="@android:color/holo_blue_bright" android:visibility="visible"
            android:textColorHint="@android:color/background_light" android:textColor="@android:color/background_light"
            android:textSize="18sp" android:layout_centerHorizontal="true" android:textAlignment="center"
            android:textStyle="normal|bold|italic" android:fontFamily="@font/exo_2" android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="333dp"
        android:layout_height="95dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg2"
        android:fontFamily="@font/exo_2"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#f28ae4f1"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textSize="19sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="309dp"
        android:layout_height="406dp"
        android:layout_above="@+id/textView7"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/exo_2"
        android:lineSpacingExtra="-3sp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />
    <TextView
            android:text="  "
            android:layout_width="wrap_content"
            android:layout_height="41dp" android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true" android:id="@+id/textView7" android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"/>


</RelativeLayout>