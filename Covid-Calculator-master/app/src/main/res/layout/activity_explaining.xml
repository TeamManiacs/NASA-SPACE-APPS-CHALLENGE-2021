<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgt"
                tools:context=".Explaining">


    <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/exo_2"
            android:textStyle="normal|bold"
            android:text="Go"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="192dp" android:layout_alignParentEnd="true" android:layout_marginEnd="99dp"/>


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:baselineAlignBottom="true"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:translationX="-100dp"
        android:translationY="135sp"
        app:srcCompat="@drawable/doctor" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="290dp"
        android:layout_height="455dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleX="0.9"
        android:translationY="-60sp"
        app:srcCompat="@drawable/speechcloud" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="198dp"
        android:layout_height="133dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fadeScrollbars="false"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@drawable/scrollview_thumb"
        android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack"
        android:translationX="-40sp"
        android:translationY="50dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:fontFamily="@font/exo_2"
            android:text="You can give me some information about you. Based on them I will calculate the probability of your death in case you get infected, probability your death is caused by serious pneumonia implications, how many people with similar charateristics with you were infected how many recovered, and how many are still dealing with the virus in your country and more..."
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="normal|bold"
            android:translationX="13dp" />

    </ScrollView>

</RelativeLayout>


